<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0B"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-114dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/roy3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="381dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="#0E0E0E"
                android:paddingLeft="25dp"
                android:text="@string/roy"
                android:textAlignment="gravity"
                android:textColor="#FBF6F6"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:layout_width="192dp"
                android:layout_height="26dp"
                android:layout_gravity="right|top"
                android:alpha="0.5"
                android:text="@string/roy2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal|italic" />

            <fragment
                android:id="@+id/youtubeplayerfragment"
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:layout_width="352dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60sp"
                android:alpha="0.7"
                android:background="#090909"
                android:backgroundTint="#070707"
                android:text="@string/words4"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="#A6FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />

            <fragment
                android:id="@+id/youtubeplayerfragment2"
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:layout_width="match_parent"
                android:layout_height="256dp" />

            <TextView
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:alpha="0.7"
                android:text="@string/words3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <fragment
                android:id="@+id/youtubeplayerfragment3"
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:layout_width="match_parent"
                android:layout_height="256dp" />

            <TextView
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:alpha="0.7"
                android:text="@string/words1"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <!--            <fragment-->
            <!--                android:id="@+id/youtubeplayerfragment4"-->
            <!--                android:name="com.google.android.youtube.player.YouTubePlayerFragment"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="256dp" />-->

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="642dp"
                android:layout_height="598dp"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:background="#181616"
                app:srcCompat="@drawable/roy6" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>